<div class="col-md-6 col-md-offset-1">
  <h3>
    <% if signed_in? %>
      <%= link_to  @user.name, user_path(@user) %>
      <span>
        <% if @user.roles.count == 0 %>
          (<%= @user.category.titleize %>)
        <% else %>
          (<%= @user.roles.first.name.titleize %>)
        <% end %>
      </span>
    <% else %>
      Welcome Visitor!
    <% end %>
  </h3>
  <h4>Designations</h4>
  <%= render 'form' %>
</div>
