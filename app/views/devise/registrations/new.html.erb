<div class="col-md-6 col-md-offset-1">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.input :name, autofocus: true, placeholder: Faker::Name.name %>
    <%= f.input :email, required: true, placeholder: Faker::Internet.email %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :category, as: :radio_buttons, collection: [["I am a patient", "patient"], ["I work at a hospital", "hospital_staff"]] %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
