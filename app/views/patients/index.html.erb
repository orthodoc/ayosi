<section role="patients">
  <div class="col-md-8 col-md-offset-1">
    <h3><%= link_to @hospital.name, hospital_path(@hospital) %></h3>
    <span class="subtitle"><%= @hospital.city %></span>
    <div class="row">
      <div class="col-sm-6">
        <%= form_tag patients_path, method: :get, class: "form-inline" do %>
          <div class="form-group">
            <%= search_field_tag :query, params[:query], size: 40, class: "form-control", placeholder: "Type 3 letters" %>
            <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <p>
      <h5>List of patients</h5>
      <div class="row">
        <div class="col-sm-6">
          <table cellspacing="0" class="table table-hover" id="user-hospital-patients">
            <thead>
              <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
              </tr>
            </thead>
              <% @patients.each do |patient| %>
                <tr>
                  <td><%= link_to patient.name, patient_path(patient) %></td>
                  <td><%= patient.age %></td>
                  <td><%= patient.gender %></td>
                </tr>
              <% end %>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </p>
  </div>
</section>
