  <div class="row">
    <h2 class="col-lg-6 pull-left">Step 1</h2>
    <sgroup class="col-lg-6 pull-right">
      <% unless @hospital.nil? %>
        <span class="pull-right"><%= link_to @hospital.name, user_path(@user) %></span><br />
