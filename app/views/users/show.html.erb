<h3><%= @user.name %></h3>
<div class="small-12 medium-6">
<h4>List of  Designated Roles</h4>
<table cellspacing="0">
  <thead>
    <tr>
      <th>Designation</th>
      <th>Hospital</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @designations.each do |designation| %>
      <tr>
        <td><%= link_to designation.name, edit_designation_path(designation.id) %></td>
        <td><%= link_to designation.hospital.name, hospital_path(designation.hospital.id) %></td>
        <td>Inactive</td>
        <td><%= link_to "Request", "#", class: "button-mini" %></td>
        <td><%= link_to "Delete", designation, method: :delete, data: { confirm: "Are you sure you want to delete this designation?" }, class: "button-mini" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Apply for a designation", new_designation_path %>
