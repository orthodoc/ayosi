<div class="row">
  <div class="small-12 medium-6">
    <h3>
      <%= @user.name %>
      <span>
        <% if @user.roles.first.nil? %>
          (<%= @user.category.titleize %>)
        <% else %>
          (<%= @user.roles.first.name.titleize %>)
        <% end %>
      </span>
    </h3>
    <h5>List of designated roles</h5>
    <table id="designation-roles-table" class="large-only" cellspacing="0">
      <thead>
        <tr>
          <!--There are 5 headers in total. The small-only class headers will appear in mobiles and tablets  -->
          <th class="small-only">Hospital</th>
          <th class="small-only">Designation</th>
          <th class="small-only">Status</th>
          <th class="small-only">Submit:</th>
          <th class="small-only">Hit:</th>
          <!--The large-only class headers are only for desktops  -->
          <th class="large-only">Hospital</th>
          <th class="large-only">Designation</th>
          <th class="large-only">Status</th>
          <th class="large-only"></th>
          <th class="large-only"></th>
        </tr>
      </thead>
      <tbody>
        <% @designations.each do |designation| %>
          <tr>
            <td><%= link_to designation.hospital.name, hospital_path(designation.hospital.id) %></td>
            <td><%= link_to designation.name, edit_designation_path(designation) %></td>
            <td><%= designation.aasm_state.capitalize %></td>
            <td><%= button_to "Request", requesting_designation_path(designation), class: "button-mini" %></td>
            <td><%= button_to "Delete", designation, method: :delete, data: { confirm: "Are you sure you want to delete this designation?" }, class: "button-mini" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Apply for a designation", new_designation_path %>
  </div>
</div>
